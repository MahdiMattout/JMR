@model SignUpViewModel
@{
  Layout = null;
}

<head>
  <link rel="stylesheet" href="~/css/custom.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
</head>
<div class="split1 left">
  <div class="centered">
    <h1 class="special" style="font-size: 60px">Signup</h1>
    <p>Signup with your data.</p>
    <form asp-action="submitSignUp" method="post" style="margin-top: 100px;">
      <div style="text-align: left;">
        <label class="form-label" asp-for="FName">First Name</label></br>
        <input required class="form-control" asp-for="FName" type="text" id="FName" name="FName" placeholder="John"></br>
        <label class="form-label" asp-for="LName">Last Name</label></br>
        <input required class="form-control" asp-for="LName" type="text" id="LName" name="LName" placeholder="Doe"></br>
        <label class="form-label" asp-for="birthDate">Birth Date</label></br>
        <input required class="form-control" asp-for="birthDate" type="Date" id="birthDate" name="birthDate"
          placeholder="Doe"></br>
        <label asp-for="Email" class="form-label">Email</label></br>
        <input required asp-for="Email" pattern="[^@@ \t\r\n]+@@[^@@ \t\r\n]+\.[^@@ \t\r\n]+" class="form-control" type="email" id="Email" name="Email"
          placeholder="name@example.com"></br>
        <label class="form-label" asp-for="Password">Password</label></br>
        <input required pattern="^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9]).{8,}$" style="display: inline;" class="form-control" asp-for="Password" type="password" id="Password" name="Password"
          placeholder="min. 8 characters"><i style="display: inline;" class="bi bi-eye-slash" id="togglePassword1"></i></br>
        <p style="color: gray; font-size: 12; text-align: center;">Password must include a number, and an upper and a lower case letter.</p>
        <label class="form-label" for="ConfirmPassword">Confirm Password</label></br>
        <input required class="form-control mb-3" style="display: inline;" type="password" id="ConfirmPassword" name="ConfirmPassword"
          placeholder="min. 8 characters"><i style="display: inline;" class="bi bi-eye-slash" id="togglePassword2"></i></br>
        <div style="color: red; display: none; text-align: center;" id="errorMsg">Passwords do not match!</div>
        <div style="color: red; display: none; text-align: center;" id="errorMsg2">This email already exists!</div>
      </div>
      <div style="width: 100%; text-align: center; background-color: rgba(89, 172, 137, 1); border-radius: 8px; padding: 2px; margin-top: 100px;">
        <input type="submit" id="button" value="Signup" class="btn text-white" style="width: 100%" />
      </div>
      <div style="margin-top: 20px; margin-bottom: 50px; text-align: center;">
        Already have an account?
        <a asp-area="" asp-controller="Login" asp-action="Login" style="color: #59AC89"> Sign in!</a>
      </div>
    </form>
  </div>
</div>

@if (ViewBag.Alert != null)
{
  <script type="text/javascript">
    window.onload = function () {
      document.querySelector("#errorMsg2").style.display="block";
    };  
  </script>
}

<div class="split2 right">
  <div class="right-subtitle" style="text-align: right;">
    Find talented developers for <br> your startups and projects and<br> find jobs all in one site!
  </div>
  <div class="bottom-left">
    <img src="~/man-sitting.png" alt="Man working on laptop">
  </div>

</div>

<style>
  .right-subtitle {
    position: absolute;
    top: 20%;
    right: 10%;
    font-family: myfont;
    font-size: 2rem;
    color: white;
  }
  .split1 {
    height: 100%;
    width: 40%;
    position: fixed;
    z-index: 1;
    top: 0;
    overflow-x: hidden;
  }

  .split2 {
    height: 100%;
    width: 60%;
    position: fixed;
    z-index: 1;
    top: 0;
    overflow-x: hidden;
    padding-top: 20px;
  }

  /* Control the left side */
  .left {
    left: 0;
  }

  /* Control the right side */
  .right {
    right: 0;
    background-color: #59AC89;
  }

  /* If you want the content centered horizontally and vertically */
  .centered {
    width: 60%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin-top: 200px;
  }
  .bottom-left {
    width : 40%;
    height : 45%;
    position : absolute;
    bottom : 5%;
    left : 10%;
  }
  form i {
    margin-left: -30px;
    cursor: pointer;
  }
</style>

<script>
  const togglePassword2 = document
    .querySelector('#togglePassword2');
  const togglePassword1 = document.querySelector('#togglePassword1');
  const password1=  document.querySelector('#Password');
  const password2 = document.querySelector('#ConfirmPassword');
  togglePassword1.addEventListener('click', () => {

    // Toggle the type attribute using
    // getAttribure() method
    const type = password1
      .getAttribute('type') === 'password' ?
      'text' : 'password';

    password1.setAttribute('type', type);

    // Toggle the eye and bi-eye icon
    this.classList.toggle('bi-eye');
  });
  togglePassword2.addEventListener('click', () => {

    // Toggle the type attribute using
    // getAttribure() method
    const type = password2
      .getAttribute('type') === 'password' ?
      'text' : 'password';

    password2.setAttribute('type', type);

    // Toggle the eye and bi-eye icon
    this.classList.toggle('bi-eye');
  });

  document.getElementById("button").addEventListener("click", function(event){
    if (Password.value!=ConfirmPassword.value) {
      event.preventDefault()
      document.querySelector("#errorMsg").style.display="block";
    }
  });

</script>