@model JMR.Models.Post
@{
  ViewData["Title"] = "Post";
}

<h2>Post Job Offer</h2>
<form asp-action="Create" method="post">
  @* <div class="form-row">
    <div class="form-group col-md-6">
      <label>Position Title</label>
      <input type="text" class="form-control" id="postitionTitle">
    </div>
  </div> *@
    <div class="form-group">
      <label asp-for="Description">Position Description</label>
      <textarea asp-for="Description" type="" class="form-control" id="description" rows="4"></textarea>
    </div>
  <div class="form-group">
    <h4>Skills Required</h4>
    <div class="form-group">
    @foreach (var skill in ViewBag.RequiredSkills)
    { 
    <div class="form-check-inline">
      <input class="form-check-input" type="checkbox" id="gridCheck">
      <label class="form-check-label" for="gridCheck">
        @skill
      </label>
    </div>
    }
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-7">
      <label for="inputAddress">Time Frame</label>
      <input type="number" min="1" class="form-control" id="inputAddress" placeholder="1">
    </div>
    <div class="form-group col-md-4">
      <label>Unit</label>
      <select id="inputState" class="form-control">
        <option selected>Days</option>
        <option>Weeks</option>
        <option>Years</option>
      </select>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label asp-for="minPay">Minimum Salary</label>
      <input type="number" min="0" class="form-control" id="minPay" name="minPay">
    </div>
    <div class="form-group col-md-6">
      <label for="maxPay">Maximum Salary</label>
      <input type="number" min="0" class="form-control" id="maxPay" name="maxPay">
    </div>
  </div>
  <button type="reset" class="btn btn-primary">Discard Changes</button>
  <input type="submit" class="btn btn-primary" asp-controller="Home" asp-action="Create" value="Post">
</form>

