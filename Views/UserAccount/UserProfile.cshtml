@model JMR.Models.PostViewModel
@{
  ViewData["Title"] = "User Profile";
}

<div class="d-flex container-fluid justify-content-start">
  <div class="mr-3">
    <h3>Settings</h3>
    <div>
    <button>Account</button>
    <button>Log out</button>
    </div>
  </div>
<div class="ml-3">
  <h3>Account</h3>
  <div class="d-inline-block p-3" style="border:solid 1px black; max-width:100%; height:100%; width:100%;">
    <h4 class="pb-3">Personal Information</h4>
  <form>
    <div class="row">
    <div class="col">
      <label>First Name</label>
      <input type="text" class="form-control" placeholder="First name">
    </div>
    <div class="col">
      <label>Last Number</label>
      <input type="text" class="form-control" placeholder="Last name">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Email</label>
      <input type="email" class="form-control" id="inputEmail4" placeholder="Email">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Phone Number</label>
      <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
    </div>
  </div>
  <hr/>
  <div class="d-flex flex-row-reverse">
  <button type="submit" class="btn btn-success ml-3">Save Changes</button>
  <button type="reset" class="btn btn-primary">Discard Changes</button>
  </div>
</form>
  </div>
</div>
</div>

