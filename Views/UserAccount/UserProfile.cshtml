@model JMR.Models.UserViewModel
@{
  ViewData["Title"] = "User Profile";
}
@{
  Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<head>
  <style>
    .profileBtn{
      height: 72px;
      border: solid 2px;
      border-color: #59ac89;
      border-radius: 12px;
    }
    a {
      text-decoration: None;
      color:black;
    }
    a:hover{
      text-decoration: None;
      color:black;
    }
  </style>
</head>

<div class="d-flex container justify-content-start">
  <div class="mr-3 col-md-6 col-xl-4">
    <h3>Settings</h3>
    <div style="margin-bottom: 28px;">
      <a asp-action="UserProfile"><div class="d-flex profileBtn">
        <div style="padding: 16px; padding-right: 12px">
          <img src="~/profileIcon.png" alt="Account" width="40px" height="40px">
        </div>
        <div>
        <div style="padding-top: 16px; padding-bottom: 2px;">
          Account
        </div style="padding-bottom: 16px;">
          <p style="font-size: 12px;">Personal Information</p>
        </div>
      </div></a>
    </div>
    <div class="mb-5">
      <a onclick="localStorage.clear();" asp-action="submitLogout" asp-controller="UserAccount">
      <div class="d-flex profileBtn">
        <div style="padding: 16px; padding-right: 12px">
          <img src="~/profileIcon.png" width="40px" height="40px">
        </div>
        <div>
        <div style="padding-top: 16px; padding-bottom: 2px;">
          Log Out
        </div>
        </div>
      </div></a>
    </div>
  </div>
  <div class=" row ml-3" style="height:100%;">
    <h3>Account</h3>
    <div class="d-inline-block p-3" style="border:solid 1px #EDEEF2; max-width:100%; height:100%; width:100%; border-radius:12px">
      <h4 class="mb-5 pb-5">Personal Information</h4>
    <form class="form-group" method="post" asp-action="SaveChanges">
      <div class="row">
      <div class="col">
        <label>First Name</label>
        <input type="text" class="form-control" asp-for="Fname" style="border-radius:6px;" placeholder="First name" value="@ViewBag.Fname">
      </div>
      <div class="col">
        <label>Last Number</label>
        <input type="text" class="form-control" asp-for="Lname" style="border-radius:6px;" placeholder="Last name" value="@ViewBag.Lname">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm-12">
        <label for="inputEmail4">Email</label>
        <input readonly type="email" class="form-control" style="border-radius:6px;" id="inputEmail4" placeholder="Email" value="@ViewBag.Email">
      </div>
      @* <div class="form-group col-md-6">
        <label for="inputPassword4">Phone Number</label>
        <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
      </div> *@
    </div>
    <hr/>
    <div class="d-flex flex-row-reverse">
    <button type="submit" asp-controller="UserAccount" asp-action="SaveChanges" class="btn btn-success ml-3" style="border-radius:12px">Save Changes</button>
    <button type="reset" class="btn" style="color: #83859C; border: 1px solid #83859C;border-radius:12px">Discard Changes</button>
    </div>
  </form>
    </div>
  </div>
</div>

