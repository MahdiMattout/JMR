@model JMR.Models.PostViewModel
@{
  ViewData["Title"] = "User Profile";
}

<head>
  <style>
    .profileBtn{
      height: 72px;
      width: 350px;
      border: solid 2px;
      border-color: #59ac89;
      border-radius: 12px;
    }
    a {
      text-decoration: None;
      color:black;
    }
    a:hover{
      text-decoration: None;
      color:black;
    }
  </style>
</head>

<div class="d-flex container-fluid justify-content-start">
  <div class="mr-5">
    <h3>Settings</h3>
    <div style="margin-bottom: 28px ;">
      <a asp-action="UserProfile"><div class="d-flex profileBtn">
        <div style="padding: 16px; padding-right: 12px">
          <img src="~/profileIcon.png" alt="Account" width="40px" height="40px">
        </div>
        <div>
        <div style="width: 266px ;padding-top: 16px; padding-bottom: 2px;">
          Account
        </div style="width: 266px; padding-bottom: 16px;">
          <p style="font-size: 12px ;">Personal Information</p>
        </div>
      </div></a>
      @* </button> *@
    </div>
    <div class="mb-5">
      <a asp-action="Logout" asp-controller="LoginController"><div class="d-flex profileBtn">
        <div style="padding: 16px; padding-right: 12px">
          <img src="~/profileIcon.png" alt="Account" width="40px" height="40px">
        </div>
        <div>
        <div style="width: 266px ;padding-top: 16px; padding-bottom: 2px;">
          Log Out
        </div>
        </div>
      </div></a>
      @* </button> *@
    </div>
  </div>
  <div class="ml-5">
    <h3>Account</h3>
    <div class="d-inline-block p-3" style="border:solid 1px black; max-width:100%; height:100%; width:100%;">
      <h4 class="pb-3">Personal Information</h4>
    <form>
      <div class="row">
      <div class="col">
        <label>First Name</label>
        <input type="text" class="form-control" placeholder="First name" value="@ViewBag.Fname">
      </div>
      <div class="col">
        <label>Last Number</label>
        <input type="text" class="form-control" placeholder="Last name" value="@ViewBag.Lname">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <input type="email" class="form-control" id="inputEmail4" placeholder="Email" value="@ViewBag.Email">
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword4">Phone Number</label>
        <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
      </div>
    </div>
    <hr/>
    <div class="d-flex flex-row-reverse">
    <button type="submit" class="btn btn-success ml-3">Save Changes</button>
    <button type="reset" class="btn btn-primary">Discard Changes</button>
    </div>
  </form>
    </div>
  </div>
</div>

